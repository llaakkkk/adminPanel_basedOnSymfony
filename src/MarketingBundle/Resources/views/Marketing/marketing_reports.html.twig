                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Amount of remaining clients </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th># of cohort</th>
                                <th># of clients</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
                                    <tr>
                                        <td>{{ key }}</td>
