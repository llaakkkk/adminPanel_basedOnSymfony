{% extends 'base.html.twig' %}
{% block title %} User {% endblock %}
{% block content %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            {#{{ dump(user) }}#}
            {#{{ dump(userDevices) }}#}
            {#{{ dump(billingData) }}#}
            {#{{ dump(userDevices.deviceLanguage) }}#}
            <div class="col-sm-4">
                <div class="ibox ">
                    <div class="ibox-title"> <a href="{{ path('users_list') }}">Back to Users list</a></div>
                    <div class="ibox-content">
                        <div class="tab-content">
                            <div id="contact" class="tab-pane active">
                                <div class="row m-b-lg">
                                    <div class="col-lg-8 text-center">
                                        <h2>{{ user.firstName }} {{ user.lastName }}</h2>
                                    </div>
                                    <div class="col-lg-4">
                                        <button type="button" class="btn btn-primary btn-sm btn-block">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            Edit
                                        </button>
                                    </div>
                                </div>
                                <div class="client-detail">
                                    <div class="full-height-scroll">

                                        <strong>Info</strong>

                                        <ul class="list-group clear-list">
                                            <li class="list-group-item fist-item">
                                                <span class="pull-right"> {{ user.email }} </span>
                                                Email
                                            </li>
                                            <li class="list-group-item">
                                                <span class="pull-right"> {{ user.created.date|date("\\a\\t g:ia F jS ") }} </span>
                                                Created
                                            </li>
                                            <li class="list-group-item">
                                                <span class="pull-right"> Yes</span>
                                                Active
                                            </li>
                                        </ul>

                                        <hr/>
                                        <div class="col-lg-offset-8 col-lg-4">
                                            <button type="button" class="btn btn-danger btn-sm btn-block"> Delete User</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="ibox">
                    <div class="ibox-content">
                        <span class="text-muted small pull-right">Last modification: <i class="fa fa-clock-o"></i> 2:10 pm - 12.06.2014</span>


                        <div class="clients-list">
                            <ul class="nav nav-tabs">
                                <span class="pull-right small text-muted">20 Elements</span>
                                <li class="active">
                                    <a data-toggle="tab" href="#tab-1">
                                        <i class="fa fa-user"></i> User info
                                    </a>
                                </li>
                                <li class="">
                                    <a data-toggle="tab" href="#tab-2">
                                        <i class="fa fa-credit-card" aria-hidden="true"></i> Payment info
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="tab-1" class="tab-pane active">
                                    <div class="full-height-scroll">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                <tr>
                                                    <th>Activation code</th>
                                                    <th>Serial number</th>
                                                    <th>Mac type</th>
                                                    <th>MacOS</th>
                                                    <th>Languages</th>
                                                    <th>Country</th>
                                                    <th>Created on</th>
                                                    <th>Test/real user</th>
                                                    <th>Current build version</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for userDevice in userDevices %}
                                                    <tr>
                                                        <td>{% if userDevice.activationKey is defined %}{{ userDevice.activationKey }}{% else %}-{% endif %}</td>
                                                        <td>{% if userDevice.serialNumber is defined %}{{ userDevice.serialNumber }}{% else %}-{% endif %}</td>
                                                        <td>{% if userDevice.modelName is defined %}{{ userDevice.modelName }} {% else %}-{% endif %}{% if userDevice.modelNumber is defined %}{{ userDevice.modelNumber }}{% else %}-{% endif %}</td>
                                                        <td>{% if userDevice.osVersion is defined %}{{ userDevice.osVersion }}{% else %}-{% endif %} {% if userDevice.osBuild is defined %}{{ userDevice.osBuild }}{% else %}-{% endif %}</td>
                                                        {#{{ dump(userDevice.deviceLanguage) }}#}
                                                        {#<td>#}
                                                            {#{% for language in userDevice.deviceLanguage %}#}
                                                            {#// You can get your comment entity here#}
                                                            {#// for example#}
                                                            {#<p>{{language.name}}</p>#}
                                                            {#{% endfor %}#}
                                                        {#</td>#}
                                                        {#<td>{{ userDevice.deviceLanguage.language.name }}</td>#}
                                                        <td> </td>
                                                        <td> </td>
                                                        <td>{% if userDevice.created is defined %}{{ userDevice.created.date|date("F jS \\a\\t g:ia") }}{% else %}-{% endif %}</td>
                                                        <td>{% if userDevice.isTest %} test {% else %}real{% endif%}</td>
                                                        <td>{% if userDevice.applicationBuildVersion is defined %}{{ userDevice.applicationBuildVersion }}{% else %}-{% endif %}</td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div id="tab-2" class="tab-pane">
                                    <div class="full-height-scroll">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                <tr>
                                                    <th>License</th>
                                                    <th>Billing status</th>
                                                    <th>Order ID</th>
                                                    <th>Next charge date</th>
                                                    <th>Total amount paid</th>
                                                    <th>Payment type, card </th>
                                                    <th>Coupon code</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for data in billingData %}
                                                    <tr>
                                                        <td>{% if data.product.licenseType.name is defined %}{{ data.product.licenseType.name }}{% else %}-{% endif %}</td>
                                                        <td>{% if data.userDevice.subscriptionStatus.licenseStatus.name is defined %}{{ data.userDevice.subscriptionStatus.licenseStatus.name }}{% else %}-{% endif %}</td>
                                                        <td>{% if data.orderId is defined %}{{ data.orderId }}{% else %}-{% endif %}</td>
                                                        <td>{% if data.userDevice.subscriptionStatus.nextChargeDate is defined %}{{ data.userDevice.subscriptionStatus.nextChargeDate | date("F jS \\a\\t g:ia")  }}{% else %}-{% endif %}</td>
                                                        <td>{% if data.paymentData['ORDER_TOTAL_AMOUNT'] is defined %}{{ data.paymentData['ORDER_TOTAL_AMOUNT'] }}{% else %}-{% endif %}</td>
                                                        <td>{% if data.eventType is defined %}{{ data.eventType }}, *{{ data.paymentData['CREDITCARD_LAST4'] }}{% else %}-{% endif %} </td>
                                                        <td>{% if data.promoCode is defined %}{{ data.promoCode }}{% else %}-{% endif %} </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
