<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BillingData" table="billing_data">
    <indexes>
      <index name="IDX_D281CDA4A76ED395" columns="user_id"/>
      <index name="IDX_D281CDA44584665A" columns="product_id"/>
    </indexes>
    <id name="id" type="bigint" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="billing_data_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="paymentData" type="json" column="payment_data" nullable="true"/>
    <field name="orderId" type="integer" column="order_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="price" type="float" column="price" precision="10" scale="0" nullable="true"/>
    <field name="eventType" type="string" column="event_type" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="created" type="datetime" column="created" nullable="false">
      <options>
        <option name="default">now()</option>
      </options>
    </field>
    <field name="updated" type="datetime" column="updated" nullable="false">
      <options>
        <option name="default">now()</option>
      </options>
    </field>
    <many-to-one field="user" target-entity="Users" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="product" target-entity="PaymentSystemProducts" fetch="LAZY">
      <join-columns>
        <join-column name="product_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
