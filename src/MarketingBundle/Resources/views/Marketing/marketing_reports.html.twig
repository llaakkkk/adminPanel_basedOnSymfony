                                <th>ARPU</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Client's lifetime (monthly plan) </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th># of cohort</th>
                                <th>Client's lifetime</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
