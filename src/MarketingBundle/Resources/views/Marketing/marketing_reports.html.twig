{% extends 'base.html.twig' %}
{% block title %} Marketing {% endblock %}
{% block style %}
    {{ parent() }}
    <link href="{{ asset('css/plugins/dataTables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/plugins/daterangepicker/daterangepicker-bs3.css') }}" rel="stylesheet">
    <link href="{{ asset('css/plugins/select2/select2.min.css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                {#{{ dump(query) }}#}
                {#{{ dump(result) }}#}
                <div class="ibox float-e-margins">

                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">
                                <form action="{{ path('marketing_all') }}" id="dataFilter" method="get" enctype="multipart/form-data">
                                    <div class="col-lg-4">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Period
                                            </div>
                                            <div class="panel-body">
                                                {% include 'MarketingBundle:Filters:date_filter.html.twig' %}
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <label for="type-of-clients">Cohort dividers</label>
                                            </div>
                                            <div class="panel-body">
                                                <div id="demo" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                                                    <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
                                                    <span></span> <b class="caret"></b>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Clear Cohorts
                                            </div>
                                            <div class="panel-body">
                                                <button class="btn btn-info" id="clear-cohorts"> Clear Cohorts</button>
                                            </div>
                                        </div>
                                    </div>
                                    {% if query.cdate is defined %}
                                        {% for key, value in query.cdate  %}
                                            <div class="panel">
                                            {{ key }}
                                            <input type="text" name="cdate[{{ key }}][date-from]" value="{{ value['date-from'] }}" >
                                            <input type="text" name="cdate[{{ key }}][date-to]" value="{{ value['date-to'] }}" >
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Cohorts of clients </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Date range</th>
                                <th># of cohort</th>
                                <th># of clients</th>
                                <th>amount, $</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
                                    <tr>
                                        <td>{{ item.date_range is empty ? '-' : item.date_range | date("F jS \\a\\t g:ia") }}</td>
                                        <td>{{ key }}</td>
                                        <td>{{ item.clients_count | default("-") }}</td>
                                        <td>{{ item.revenue | default("-") }}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Revenue from cohorts </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th># of cohort</th>
                                <th>Revenue ($)</th>
                                <th>Total revenue ($)</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td>{{ item.revenue | default("-") }}</td>
                                        <td>{{ item.total_revenue | default("-") }}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Amount of active clients (in cohort) </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th># of cohort</th>
                                <th># of clients</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Index of active clients </h5>
