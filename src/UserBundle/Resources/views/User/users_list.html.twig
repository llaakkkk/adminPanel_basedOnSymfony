{% extends 'base.html.twig' %}
{% block title %} Users {% endblock %}
{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Users</h5>

                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-stripped toggle-arrow-tiny" data-page-size="8">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Activation key</th>
                                <th>License</th>
                                <th>Billing status</th>
                                <th>Created</th>
                                <th>Last billed</th>
                                <th>Order ID</th>
                                <th>Coupon code</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="10">
                                    <ul class="pagination pull-right"></ul>
                                    {#{{ dump(users) }}#}
                                </td>
                            </tr>
                            {% for user in users %}
                                <tr>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.userId.firstName }} {{ user.userId.lastName }}</a></td>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.userId.email }}</a></td>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.activationKey }}</a></td>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.subscriptionStatus.licenseStatus.name }}</a></td>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.subscriptionStatus.product.name }}</a></td>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.userId.created.date|date("F jS \\a\\t g:ia") }}</a></td>
                                    <td><a href="{{ path('user', {'id': user.userId.id}) }}">{{ user.subscriptionStatus.licenseStatus.id }}</a></td>
                                </tr>
                            {% endfor %}
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
