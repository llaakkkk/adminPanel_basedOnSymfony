{% extends 'base.html.twig' %}
{% block title %} User {% endblock %}
{% block content %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            {{ dump(user) }}
            {{ dump(userDevices) }}
            <div class="col-sm-4">
                <div class="ibox ">

                    <div class="ibox-content">
                        <div class="tab-content">
                            <div id="contact" class="tab-pane active">
                                <div class="row m-b-lg">
                                    <div class="col-lg-8 text-center">
                                        <h2>{{ user.firstName }} {{ user.lastName }}</h2>

                                    </div>
                                    <div class="col-lg-4">


                                        <button type="button" class="btn btn-primary btn-sm btn-block">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            Edit
                                        </button>
                                    </div>
                                </div>
                                <div class="client-detail">
                                    <div class="full-height-scroll">

                                        <strong>Info</strong>

                                        <ul class="list-group clear-list">
                                            <li class="list-group-item fist-item">
                                                <span class="pull-right"> {{ user.email }} </span>
                                                Email
                                            </li>
                                            <li class="list-group-item">
                                                <span class="pull-right"> {{ user.created.date|date("\\a\\t g:ia F jS ") }} </span>
                                                Created
                                            </li>
                                            <li class="list-group-item">
                                                <span class="pull-right"> Yes</span>
                                                Active
                                            </li>
                                        </ul>

                                        <hr/>
                                        <strong>Timeline activity</strong>
                                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                                            <div class="vertical-timeline-block">
                                                <div class="vertical-timeline-icon gray-bg">
                                                    <i class="fa fa-coffee"></i>
                                                </div>
                                                <div class="vertical-timeline-content">
                                                    <p>Conference on the sales results for the previous year.
                                                    </p>
                                                    <span class="vertical-date small text-muted"> 2:10 pm - 12.06.2014 </span>
                                                </div>
                                            </div>
                                            <div class="vertical-timeline-block">
                                                <div class="vertical-timeline-icon gray-bg">
                                                    <i class="fa fa-briefcase"></i>
                                                </div>
                                                <div class="vertical-timeline-content">
                                                    <p>Many desktop publishing packages and web page editors now use Lorem.
                                                    </p>
                                                    <span class="vertical-date small text-muted"> 4:20 pm - 10.05.2014 </span>
                                                </div>
                                            </div>
                                            <div class="vertical-timeline-block">
                                                <div class="vertical-timeline-icon gray-bg">
                                                    <i class="fa fa-bolt"></i>
                                                </div>
                                                <div class="vertical-timeline-content">
                                                    <p>There are many variations of passages of Lorem Ipsum available.
                                                    </p>
                                                    <span class="vertical-date small text-muted"> 06:10 pm - 11.03.2014 </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="ibox">
                    <div class="ibox-content">
                        <span class="text-muted small pull-right">Last modification: <i class="fa fa-clock-o"></i> 2:10 pm - 12.06.2014</span>


                        <div class="clients-list">
                            <ul class="nav nav-tabs">
                                <span class="pull-right small text-muted">20 Elements</span>
                                <li class="active">
                                    <a data-toggle="tab" href="#tab-1">
                                        <i class="fa fa-user"></i> User info
                                    </a>
                                </li>
                                <li class="">
                                    <a data-toggle="tab" href="#tab-2">
                                        <i class="fa fa-credit-card" aria-hidden="true"></i> Payment info
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="tab-1" class="tab-pane active">
                                    <div class="full-height-scroll">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead>
                                                <tr>
                                                    <th>Activation code</th>
                                                    <th>Serial number</th>
                                                    <th>Mac type</th>
                                                    <th>MacOS</th>
                                                    <th>Languages</th>
                                                    <th>Country</th>
                                                    <th>Created on</th>
                                                    <th>Test/real user</th>
                                                    <th>Current build version</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for userDevice in userDevices %}
                                                    <tr>
                                                        <td>{{ userDevice.activationKey }}</td>
                                                        <td>{{ userDevice.serialNumber }}</td>
                                                        <td>{{ userDevice.modelName }} {{ userDevice.modelNumber }}</td>
                                                        <td>{{ userDevice.osVersion }} {{ userDevice.osBiuld }}</td>
                                                        <td> </td>
                                                        <td> </td>
                                                        <td>{{ userDevice.created.date|date("F jS \\a\\t g:ia") }}</td>
                                                        <td>{% if userDevice.isTest %} test {% else %}real{% endif%}</td>
                                                        <td>{{ userDevice.applicationBuildVersion }}</td>
                                                    </tr>
                                                {% endfor %}
                                                <tr>

                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div id="tab-2" class="tab-pane">
                                    <div class="full-height-scroll">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <tbody>
                                                <tr>
                                                    <td><a data-toggle="tab" href="#company" class="client-link">Tellus Institute</a></td>
                                                    <td>Rexton</td>
                                                    <td><i class="fa fa-flag"></i> Angola</td>
                                                    <td class="client-status"><span class="label label-primary">Active</span></td>
                                                </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
