                                <th>Client's lifetime</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if result %}
                                {% for key, item in result  %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
