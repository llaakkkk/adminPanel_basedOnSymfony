{% extends 'base.html.twig' %}
{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>FooTable with row toggler, sorting and pagination</h5>

                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                            <thead>
                                <tr>
                                    <th data-toggle="true">Role Name</th>
                                    {% for permission in permissions %}
                                    <th>{{ permission.permDesc }}</th>
                                    {% endfor %}
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for role in roles %}
                                    <tr>
                                        <td>
                                            {{ role.roleName|e }}
                                        </td>

                                            {% for permission in permissions %}

                                                   {% if  permission.permId in rep.loadPermissionsByRole(role.roleId)|keys %}
                                                    <td class="text-navy"><i class="fa fa-plus" aria-hidden="true"></i></td>
                                                   {% else %}
                                                    <td class="text-warning"><i class="fa fa-minus" aria-hidden="true"></i></td>
                                                   {% endif %}
                                            {% endfor %}
                                        <td>
                                            <a href="#"><i class="fa fa-check text-navy"></i></a>
                                            {{ role.roleId }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- FooTable -->
    <script src="{{ asset('js/plugins/footable/footable.all.min.js') }}"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function() {

            $('.footable').footable();
            $('.footable2').footable();

        });

    </script>
{% endblock %}